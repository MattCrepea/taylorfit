
darken-amount = 6%

tf-result
  text-align center
  *
    user-select text

  & > .nomodel
    font-size 4vw
    color #CCC
    display block
    user-select none

  & > .graphs
    margin 60px auto
    padding 30px
    box-sizing border-box
    width 400px
    display block
    border 3px dashed rgba(black, 0.2)
    border-radius 20px

    & > *
      display block
      color #BBB
    & > hr
      border 1px solid #DDD
    & > .title
      font-size 28pt
    & > .subtitle
      font-size 16pt

  & > .stats
    display block
    margin-top 6px
    & > .stat
      background #EEE
      box-shadow 0 0 0 1px #CCC
      color black

      font-size 12pt
      display inline-block
      text-align right
      padding 2px 5px
      & > *
        padding 3px
        display block
      & > .name
        text-transform uppercase

  & > .terms
    display block

    & > .plus
      color black
      display inline-block
      padding 7px 3px

      &:last-child
        display none

    & > .term
      position relative
      display inline-block
      padding 7px

      & > *:not(:last-child):after
        content "Â·"
        margin 0 2px

      & > .control
        absolute left 0
        padding-top 28px
        text-align center
        width calc(100% + 30px)
        box-shadow 0 0 0 2px rgba(black, 0.3)
        border-radius 4px
        color black
        overflow hidden
        pointer-events none
        opacity 0
        transition opacity 300ms
        z-index 10
        position reltive

        &:after
          content ""
          margin 0

        & > *
          display inline-block
          background white
          width 100%
          box-shadow inset 0 1px 0 0 #CCC
          font-size 12pt
          padding 5px 7px
          box-sizing border-box

        & > .stat
          background #EEE
          & > *
            display inline-block
          & > .name
            text-align left
            width 20%
          & > .value
            text-align right
            width 80%

        & > .remove
          absolute top 2px right 2px
          width 26px
          height 24px
          cursor pointer
          background red
          color white
          padding 3px
          box-shadow inset 0 0 0 1px #AAA
          border-radius 4px

      &:hover
        & > .control
          opacity 1
          pointer-events initial

      &:nth-child(2)
        color darken(red,darken-amount)
      &:nth-child(3)
        color darken(blue,darken-amount)
      &:nth-child(4)
        color darken(green,darken-amount)
      &:nth-child(5)
        color darken(orange,darken-amount)
      &:nth-child(6)
        color darken(purple,darken-amount)
      &:nth-child(7)
        color darken(cyan,darken-amount)
