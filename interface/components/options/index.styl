
tf-options
  position relative
  display inline-block
  size 100%

  & > .questions
    box-shadow 0 1px 0 rgba(black, 0.2)
    width 100%

    & > .multiplicands
    & > .exponents
      display inline-block
      padding 10px
      &:not(:first-child)
        box-shadow -1px 0 0 rgba(black, 0.2)


  table.candidates
    padding-bottom 10px
    margin 10px
    display block
    overflow auto
    height calc(100% - 100px)
    float right

    thead
      position sticky
      top 0
      background white
      z-index 10

    td, th
      padding 4px 6px
      box-shadow none
    th
      text-align right
      font-size 12pt
      box-shadow none
      text-transform uppercase
      &:first-child
        text-align left

    tr.candidate
      font-size 12pt
      text-align left
      transition background 300ms
      cursor pointer
      overflow hidden
      &:hover
        background rgba(green, 0.3)
        box-shadow inset 0 0 0 2px green
      &.selected
        background green
        color white

      & > td.term
        & > .name
          &:before
            content "("
          &:after
            content ")"
      & > td.stat
        text-align right

      sub, sup
        font-family "Muli"
        font-size 8pt
