
tf-options

  table.candidates

    padding-bottom 10px
    margin-bottom 10px
    float right

    th
      text-align right
      font-size 12pt
      box-shadow none
      text-transform uppercase
      &:first-child
        text-align left

    tr.candidate
      font-size 12pt
      border-radius 10px
      text-align left

      td
        padding 4px 6px
        box-shadow none

      & > td.term
        & > .name
          &:before
            content "("
          &:after
            content ")"
      & > td.stat
        text-align right

      sub, sup
        font-family "Muli"
        font-size 8pt
