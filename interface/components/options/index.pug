
.candidate-wrapper
  table.candidates(data-bind="if:candidates().length")
    thead
      tr
        th
          div.centering
            div.fixing Term
        // ko each:stats
        // ko if:$value
        th
          div.centering
            div.fixing(data-bind="text:$key")
        // /ko
        // /ko

    tbody
      // ko foreach:candidates
      tr.candidate(data-bind="click:function(){selected(true)},css:{selected:selected}")
        td.term
          span.coeff
            span(data-bind="num:coeff")
          // ko foreach:term
          span.name
            span(data-bind="text:name||'x'")
            // ko ifnot:name
            sub(data-bind="text:index")
            // /ko
          // ko if:exp !== 1
          sup(data-bind="text:exp")
          // /ko
          // /ko
        // ko foreach:stats
        // ko if:$parents[1].stats()[name]
        td.stat
          span.value(data-bind="num:value")
        // /ko
