
tf-grid
  tf-dropdown
    absolute right 8px top 5px
    .dropdown-content
      overflow hidden
      & > *
        padding 4px 10px
        display inline-block
        transition background 300ms
        width 100%
        box-sizing border-box
        cursor pointer
        &.sep
          border-top 1px solid #DDD
        &:hover
          background #EEE
      .remove
        color red
      .insert
        color blue
  input
    padding 6px 10px
    font-size 12pt
    width 120px
  table
    font-size 11pt
    td, th
      padding 4px 8px
      text-align left
      position relative
      & > *
        display inline-block
    th
      padding-right 32px
    td
      text-align right
    th .placeholder
      font-family "Cookie"
    td .placeholder
      color #CCC
    .add
      box-shadow none
      padding 3px
    .add > a
      padding 4px 5px
      size 24px
      box-sizing border-box
      font-size 12pt
      background #DDD
      color white
      text-align center
      cursor pointer
      border-radius 100%
      transition background 300ms
      &:hover
        background green
    th.add
      border-top-right-radius 10px
      border-bottom-right-radius 10px
    td.add
      border-bottom-left-radius 10px
      border-bottom-right-radius 10px
    th.dependant
      box-shadow inset 0 -2px 0 blue




