
tf-grid
  tf-dropdown
    absolute right 8px top 4px
    .dropdown-content
      overflow hidden
      & > *
        padding 4px 10px
        display inline-block
        transition background 300ms
        width 100%
        box-sizing border-box
        cursor pointer
        &.sep
          border-top 1px solid #DDD
        &:hover
          background #EEE
      .remove
        color red
      .insert
        color blue
  th tf-dropdown
    absolute right 4px top 0px
  .input-bar
    overflow ellipsis
  label.button.start
    font-size 18pt
    padding 40px
    & > hr
      border 1px solid white
    & > .small
      font-size 12pt
  input
    padding 6px 10px
    font-size 12pt
    width 120px
  table
    font-size 10pt
    td, th
      padding 2px 6px
      text-align left
      position relative
      & > *
        display inline-block
    th
      padding-right 24px
      padding-bottom 6px
      font-weight 700
      transition 400ms
      &.dependent
        color blue
        box-shadow inset 0 -2px 0 blue
    td
      text-align right
    th .placeholder
      font-family "Cookie"
    td .placeholder
      color #CCC
    .add
      box-shadow none
      padding 3px
    .add > a
      padding 4px 5px
      size 24px
      box-sizing border-box
      font-size 12pt
      background #DDD
      color white
      text-align center
      cursor pointer
      border-radius 100%
      transition background 300ms
      &:hover
        background green
    th.add
      border-top-right-radius 10px
      border-bottom-right-radius 10px
    td.add
      border-bottom-left-radius 10px
      border-bottom-right-radius 10px





