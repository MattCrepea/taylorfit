
tf-content
  position relative
  display block
  color black
  min-height 100%

  .resize
    display inline-block
    width 5px
    background #DDD
    height 100vh
    z-index 1000

  & > .options
  & > .grid
    transition width 1s
    padding 20px
    padding-top header-height + 20px
    box-sizing border-box
    height 100%
    min-width 300px
    max-width calc(100% - 306px) !important
    display block
    background white
    overflow auto

  & > .options
    width 30%
    float right

  & > .grid
    width calc(70% - 3px)
    float left
    //box-shadow 1px 0 0 #CCC

  .candidates

    padding-bottom 10px
    margin-bottom 10px

    .candidate
      font-family "Cookie"

      padding 4px 20px
      margin 5px
      font-size 24pt
      display block

      background #EEE
      border-radius 10px

      sub, sup
        font-family "Muli"
        font-size 10pt

  & > .hidden
    display none

