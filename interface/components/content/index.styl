
@media screen and (min-width: 1270px) {
  tf-content > span.wrapper {
    width: calc(100% - 300px) !important;
  }
  tf-settings > .questions {
    transform: translateX(0) !important;
  }
  tf-header .settings {
    display: none !important;
  }
}

tf-content
  position relative
  display block
  color black
  size 100%
  padding-top header-height
  box-sizing border-box
  background white
  overflow hidden

  img.loader
    absolute top 0 left 0
    z-index 10000
    size 100%
    opacity 0.05

  & > span.wrapper
    size 100%
    display block
    overflow hidden
    position relative


    .candidates
    .data
    .model
      padding 20px
      box-sizing border-box
      display block

    .candidates
      float right
      text-align right
      overflow hidden

    .data
      float left
      & > .buffer
        display block
        height 20px
      & > tf-grid
      & > .title
        display block
        margin-bottom 20px
      & > .title
      & > tf-loader
        margin-bottom 10px
        .small, hr
          display none

    // control min sizes
    .model
    .candidates
      min-height 130px
    .split-data
      max-height calc(100% - 130px)


