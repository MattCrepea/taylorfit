
tf-content
  position relative
  display block
  color black
  height 100%

  & > .options
  & > .grid
    transition width 1s
    padding 20px
    padding-top header-height + 20px
    box-sizing border-box
    height 100%
    display block
    background white
    overflow auto

  & > .options
    float right
    text-align right

  & > .grid
    float left
    box-shadow 3px 0 0 #CCC
    &.init
      width 100% !important


  table.candidates

    padding-bottom 10px
    margin-bottom 10px
    float right

    th
      text-align right
      font-size 12pt
      box-shadow none
      text-transform uppercase
      &:first-child
        text-align left

    tr.candidate
      font-size 12pt
      border-radius 10px
      text-align left

      td
        padding 4px 6px
        box-shadow none

      & > td.term
        & > .name
          &:before
            content "("
          &:after
            content ")"
      & > td.stat
        text-align right

      sub, sup
        font-family "Muli"
        font-size 8pt

  & > .hidden
    display none

