
tf-content
  position relative
  display block
  color black
  size 100%
  padding-top header-height
  box-sizing border-box
  background white


  & > span.wrapper
    size 100%
    display block

    & >.loader
      size 100%
      display block
      padding 30px
      box-sizing border-box
      text-align center

      .button
        font-size 18pt
        padding 40px
        min-width 240px
        text-align center
        background green
        margin 15px
        &.input-model
          background blue
        & > hr
          border 1px solid white
        & > .small
          font-size 12pt

    & > .options, & > .grid
      transition width 1s, height 1s
      padding 20px
      box-sizing border-box

      display block
      overflow auto
      width 20%
      height 100%
      &:hover
        width 80%


    & > .options
      float right
      text-align right

    & > .grid
      float left
      box-shadow 3px 0 0 #CCC


