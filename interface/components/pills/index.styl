
tf-pills
  display inline-block
  position relative
  max-width 100%

  header
    & > span.title
      font-family "Anonymous Pro", sans-serif
      font-size 18pt

  & > span.subtitle
    absolute bottom 0 left 10px

  & > a.pill
    font-size 12pt
    background rgba(black, 0.1)
    box-shadow 0 0 0 2px rgba(black, 0.3)
    padding 2px 12px
    margin 4px
    border-radius 1000px
    transition 300ms
    cursor pointer
    user-select none

    &:hover
      box-shadow 0 0 0 2px #CCC
    &.active
      background #EEE
      box-shadow 0 0 0 2px #CCC
      color black
      &:hover
        box-shadow 0 0 0 2px rgba(black, 0.3)

  & > a.fa.fa-plus
    padding 2px 4px
    transition 300ms
    &.hide
      display none
    &:hover
      text-shadow 1px 0 0 green, -1px 0 0 green,
       0 1px 0 green, 0 -1px 0 green
    &:active
      color green

  & > input.custom
    margin-left 10px
    cursor text
    width 100px
    &.invalid
      box-shadow 0 0 2px red
    &.hide
      display none

