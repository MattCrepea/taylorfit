
tf-other-settings
  display inline-block
  position relative
  max-width 100%

  header
    > span.title
      font-family "Anonymous Pro", sans-serif
      font-size 18pt

  > span.subtitle
    absolute bottom 0 left 10px

  > .option
    > label
      font-size 12pt
      vertical-align middle

    > a.checkbox
      vertical-align middle
      background rgba(black, 0.1)
      box-shadow 0 0 0 2px rgba(black, 0.3)
      padding 2px 12px
      margin 4px
      border-radius 1000px
      transition 300ms
      cursor pointer
      user-select none
      display inline-block
      position relative
      overflow hidden

      height 15px
      width 20px

      &:before, &:after
        content ''
        position absolute
        top 0
        height 19px
        width 19px
        border-radius 1000px
        transition left 150ms
        box-sizing border-box

      &:before
        width 44px
        left -25px
        background lightgreen

      &:after
        left 0
        background green

      &.active
        &:before
          left 0

        &:after
          left 25px


