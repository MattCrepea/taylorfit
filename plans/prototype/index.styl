
@import "./_color"
@import 'https://fonts.googleapis.com/css?family=Muli';

// --- reset

html, body, ul
  margin 0
  padding 0
*
  transition all 300ms

body
  background bg
  color fg
  font-family Muli
  font-size 12pt
  max-width 600px

.small
  font-size 0.8em
  color grey

.button
  background green
  border-radius 5px
  font-size 10pt
  padding 2px 6px
  cursor pointer
  color #FFF
  display inline-block
  margin 10px
  &.warning
    background red

.right
  float right
.space
  margin 0 10px

// --- sections

section.section
  padding 15px 30px 15px 80px
  position relative
  header
    font-size 16pt
    padding-bottom 12px
    span
      margin-right 12px
  &:before
  &:after
    content ""
    display block
    height 100%
    position absolute
    top 0
  &:before
    width 60px
    background white
    left 0
    z-index -1
  &:after
    width 4px
    background lighten(grey, 40%)
    left 28px
    z-index -1
  .help
    &:before
      content "?"
    position absolute
    left 15px
    border-radius 100%
    color blue
    font-weight bold
    font-size 16pt
    background #FFF
    box-sizing border-box
    width 30px
    height 30px
    padding 2px 9px
    margin-top -15px
    box-shadow 0 0 0 2px lighten(grey, 40%)
    cursor pointer
    &:hover
      color white
      background blue


// --- tables

table
  border-collapse collapse
  overflow hidden
  border-radius 5px
  box-shadow 0 0 0 2px white
  font-size 10pt
  cursor pointer
  text-align right
  width 100%
  td, th
    box-shadow 2px 2px white
    padding 4px 10px
  tbody
    tr:nth-child(2n)
      background lighten(white, 50%)
    tr:hover
      background lighten(green, 70%)
    td:hover
      background lighten(green, 60%)
    tr.selected > td:first-child
      box-shadow inset 2px 0 0 green

// --- input

input
  border none
  outline none
  padding 4px 12px
  font-size 14pt
  border-radius 2px
  box-shadow 0 0 0 2px white
  width 50pt
  &:focus
    box-shadow 0 0 0 2px green


